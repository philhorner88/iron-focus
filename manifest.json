<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <title>IronFocus</title>
    <link rel="manifest" href="manifest.json">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="apple-mobile-web-app-title" content="IronFocus">
    <link rel="apple-touch-icon" href="https://cdn-icons-png.flaticon.com/512/2964/2964514.png">
    
    <script src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    
    <style>
        body { 
            background-color: black; 
            margin: 0; 
            padding: 0; 
            color: white;
            -webkit-tap-highlight-color: transparent;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            overflow-x: hidden;
        }
        .no-scrollbar::-webkit-scrollbar { display: none; }
        .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
        input[type="number"]::-webkit-inner-spin-button, 
        input[type="number"]::-webkit-outer-spin-button { -webkit-appearance: none; margin: 0; }
        .animate-in { animation: fadeIn 0.4s ease-out; }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
        .safe-area-inset-bottom { padding-bottom: env(safe-area-inset-bottom); }
    </style>
</head>
<body>
    <div id="root"></div>

    <script type="text/babel">
        // --- Custom Inline SVG Icons (Replacing failing Lucide CDN) ---
        const Icon = ({ children, size = 24, className = "" }) => (
            <svg 
                xmlns="http://www.w3.org/2000/svg" 
                width={size} 
                height={size} 
                viewBox="0 0 24 24" 
                fill="none" 
                stroke="currentColor" 
                strokeWidth="2" 
                strokeLinecap="round" 
                strokeLinejoin="round" 
                className={className}
            >
                {children}
            </svg>
        );

        const Play = (props) => <Icon {...props}><polygon points="5 3 19 12 5 21 5 3"/></Icon>;
        const Pause = (props) => <Icon {...props}><rect x="6" y="4" width="4" height="16"/><rect x="14" y="4" width="4" height="16"/></Icon>;
        const RotateCcw = (props) => <Icon {...props}><path d="M3 12a9 9 0 1 0 9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"/><polyline points="3 3 3 8 8 8"/></Icon>;
        const Plus = (props) => <Icon {...props}><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></Icon>;
        const Trash2 = (props) => <Icon {...props}><polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/><line x1="10" y1="11" x2="10" y2="17"/><line x1="14" y1="11" x2="14" y2="17"/></Icon>;
        const ChevronRight = (props) => <Icon {...props}><polyline points="9 18 15 12 9 6"/></Icon>;
        const Dumbbell = (props) => <Icon {...props}><path d="M6.5 6.5h11M6.5 17.5h11M3 10v4a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-4a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2z"/><path d="M8.5 6.5v11M15.5 6.5v11"/></Icon>;
        const Timer = (props) => <Icon {...props}><line x1="10" y1="2" x2="14" y2="2"/><line x1="12" y1="14" x2="15" y2="11"/><circle cx="12" cy="14" r="8"/></Icon>;
        const CheckCircle2 = (props) => <Icon {...props}><path d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z"/><path d="m9 12 2 2 4-4"/></Icon>;
        const Circle = (props) => <Icon {...props}><circle cx="12" cy="12" r="10"/></Icon>;
        const BarChart3 = (props) => <Icon {...props}><path d="M3 3v18h18"/><path d="M18 17V9"/><path d="M13 17V5"/><path d="M8 17v-3"/></Icon>;
        const History = (props) => <Icon {...props}><path d="M3 12a9 9 0 1 0 9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"/><polyline points="3 3 3 8 8 8"/><line x1="12" y1="7" x2="12" y2="12"/><line x1="12" y1="12" x2="16" y2="14"/></Icon>;
        const Trophy = (props) => <Icon {...props}><path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"/><path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"/><path d="M4 22h16"/><path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"/><path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"/><path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"/></Icon>;
        const Calendar = (props) => <Icon {...props}><rect x="3" y="4" width="18" height="18" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></Icon>;
        const Flag = (props) => <Icon {...props}><path d="M4 15s1-1 4-1 5 2 8 2 4-1 4-1V3s-1 1-4 1-5-2-8-2-4 1-4 1z"/><line x1="4" y1="22" x2="4" y2="15"/></Icon>;
        const ClipboardList = (props) => <Icon {...props}><rect x="8" y="2" width="8" height="4" rx="1" ry="1"/><path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"/><line x1="8" y1="11" x2="8" y2="11"/><line x1="12" y1="11" x2="16" y2="11"/><line x1="8" y1="16" x2="8" y2="16"/><line x1="12" y1="16" x2="16" y2="16"/></Icon>;
        const X = (props) => <Icon {...props}><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></Icon>;
        const PlusCircle = (props) => <Icon {...props}><circle cx="12" cy="12" r="10"/><line x1="12" y1="8" x2="12" y2="16"/><line x1="8" y1="12" x2="16" y2="12"/></Icon>;
        const SkipForward = (props) => <Icon {...props}><polygon points="5 4 15 12 5 20 5 4"/><line x1="19" y1="5" x2="19" y2="19"/></Icon>;
        const SkipBack = (props) => <Icon {...props}><polygon points="19 20 9 12 19 4 19 20"/><line x1="5" y1="19" x2="5" y2="5"/></Icon>;
        const Volume2 = (props) => <Icon {...props}><polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"/><path d="M15.54 8.46a5 5 0 0 1 0 7.07"/><path d="M19.07 4.93a10 10 0 0 1 0 14.14"/></Icon>;
        const VolumeX = (props) => <Icon {...props}><polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"/><line x1="23" y1="9" x2="17" y2="15"/><line x1="17" y1="9" x2="23" y2="15"/></Icon>;
        const LayoutGrid = (props) => <Icon {...props}><rect x="3" y="3" width="7" height="7"/><rect x="14" y="3" width="7" height="7"/><rect x="14" y="14" width="7" height="7"/><rect x="3" y="14" width="7" height="7"/></Icon>;
        const TrendingUp = (props) => <Icon {...props}><polyline points="23 6 13.5 15.5 8.5 10.5 1 18"/><polyline points="17 6 23 6 23 12"/></Icon>;
        const Award = (props) => <Icon {...props}><circle cx="12" cy="8" r="7"/><polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"/></Icon>;

        const MUSCLE_GROUPS = ['Chest', 'Back', 'Quads', 'Hamstrings', 'Shoulders', 'Biceps', 'Triceps', 'Abs', 'Calves', 'Glutes', 'Full Body'];
        const DAYS_OF_WEEK = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'];

        const createNewSet = (target = "10") => ({
            id: Math.random().toString(36).substr(2, 9),
            targetReps: target,
            actualReps: ""
        });

        const INITIAL_TIMER_SETTINGS = { work: 45, restSet: 60, restExercise: 120, prepTime: 10 };

        function App() {
            const [activeTab, setActiveTab] = React.useState('program');
            const [showBulkModal, setShowBulkModal] = React.useState(false);
            const [bulkTarget, setBulkTarget] = React.useState('active');
            const [bulkInput, setBulkInput] = React.useState("");
            const [isAudioEnabled, setIsAudioEnabled] = React.useState(true);
            
            const [exercises, setExercises] = React.useState(() => {
                const saved = localStorage.getItem('ironfocus_exercises_v5');
                return saved ? JSON.parse(saved) : [{ 
                    id: '1', name: 'Bench Press', muscle: 'Chest', completed: false, 
                    sets: Array(4).fill(0).map(() => createNewSet("8-12")) 
                }];
            });

            const [planner, setPlanner] = React.useState(() => {
                const saved = localStorage.getItem('ironfocus_planner_v5');
                return saved ? JSON.parse(saved) : DAYS_OF_WEEK.reduce((acc, day) => ({ ...acc, [day]: [] }), {});
            });

            const [timerSettings, setTimerSettings] = React.useState(() => {
                const saved = localStorage.getItem('ironfocus_timer_settings_v5');
                return saved ? JSON.parse(saved) : INITIAL_TIMER_SETTINGS;
            });

            const [history, setHistory] = React.useState(() => {
                const saved = localStorage.getItem('ironfocus_history_v5');
                return saved ? JSON.parse(saved) : [];
            });

            const [timeLeft, setTimeLeft] = React.useState(timerSettings.prepTime);
            const [isActive, setIsActive] = React.useState(false);
            const [timerMode, setTimerMode] = React.useState('PREP');
            const [currentCycle, setCurrentCycle] = React.useState(1);
            const [currentExIndex, setCurrentExIndex] = React.useState(0);

            const speak = React.useCallback((text) => {
                if (!isAudioEnabled) return;
                try {
                    const utterance = new SpeechSynthesisUtterance(text);
                    utterance.rate = 1.1;
                    window.speechSynthesis.cancel();
                    window.speechSynthesis.speak(utterance);
                } catch(e) {}
            }, [isAudioEnabled]);

            React.useEffect(() => {
                localStorage.setItem('ironfocus_exercises_v5', JSON.stringify(exercises));
                localStorage.setItem('ironfocus_planner_v5', JSON.stringify(planner));
                localStorage.setItem('ironfocus_timer_settings_v5', JSON.stringify(timerSettings));
                localStorage.setItem('ironfocus_history_v5', JSON.stringify(history));
            }, [exercises, planner, timerSettings, history]);

            React.useEffect(() => {
                let interval = null;
                if (isActive && timeLeft > 0) {
                    interval = setInterval(() => {
                        if (timeLeft <= 4 && timeLeft > 1) speak((timeLeft - 1).toString());
                        setTimeLeft(prev => prev - 1);
                    }, 1000);
                } else if (isActive && timeLeft === 0) {
                    handlePhaseTransition();
                }
                return () => clearInterval(interval);
            }, [isActive, timeLeft, speak]);

            const handlePhaseTransition = (direction = 'NEXT') => {
                const totalSets = exercises[currentExIndex]?.sets?.length || 1;
                if (direction === 'NEXT') {
                    if (timerMode === 'PREP') startWorkPhase(currentExIndex, 1);
                    else if (timerMode === 'WORK') {
                        if (currentCycle < totalSets) startRestSetPhase();
                        else if (currentExIndex < exercises.length - 1) startRestExPhase();
                        else finishTimer();
                    } else if (timerMode === 'REST_SET') startWorkPhase(currentExIndex, currentCycle + 1);
                    else if (timerMode === 'REST_EX') startWorkPhase(currentExIndex + 1, 1);
                } else if (direction === 'PREV') {
                    if (currentCycle > 1) startWorkPhase(currentExIndex, currentCycle - 1);
                    else if (currentExIndex > 0) startWorkPhase(currentExIndex - 1, 1);
                    else resetTimer();
                }
            };

            const startWorkPhase = (exIdx, cycle) => {
                setTimerMode('WORK'); setTimeLeft(timerSettings.work);
                setCurrentExIndex(exIdx); setCurrentCycle(cycle);
                speak(`${exercises[exIdx]?.name}. Set ${cycle}. Work.`);
            };

            const startRestSetPhase = () => {
                setTimerMode('REST_SET'); setTimeLeft(timerSettings.restSet);
                speak(`Rest. Next up: Set ${currentCycle + 1}.`);
            };

            const startRestExPhase = () => {
                setTimerMode('REST_EX'); setTimeLeft(timerSettings.restExercise);
                speak(`Rest. Next up: ${exercises[currentExIndex + 1]?.name}.`);
            };

            const finishTimer = () => { setIsActive(false); setTimerMode('COMPLETED'); speak("Workout complete."); };

            const resetTimer = () => {
                setIsActive(false); setCurrentExIndex(0); setCurrentCycle(1);
                setTimerMode('PREP'); setTimeLeft(timerSettings.prepTime);
                speak("Get ready.");
            };

            const addExercise = (name = "New Exercise", target = 'active') => {
                const newEx = { id: Math.random().toString(36).substr(2, 9), name, muscle: 'Full Body', completed: false, sets: Array(4).fill(0).map(() => createNewSet()) };
                if (target === 'active') setExercises([...exercises, newEx]);
                else setPlanner({ ...planner, [target]: [...(planner[target] || []), newEx] });
            };

            const handleBulkImport = () => {
                const names = bulkInput.split('\n').filter(l => l.trim() !== "");
                const newExs = names.map(n => ({ id: Math.random().toString(36).substr(2, 9), name: n.trim(), muscle: 'Full Body', completed: false, sets: Array(4).fill(0).map(() => createNewSet()) }));
                if (bulkTarget === 'active') setExercises([...exercises, ...newExs]);
                else setPlanner({ ...planner, [bulkTarget]: [...(planner[bulkTarget] || []), ...newExs] });
                setBulkInput(""); setShowBulkModal(false);
            };

            const finishWorkout = () => {
                const totalSets = exercises.reduce((sum, ex) => sum + ex.sets.length, 0);
                const entry = { 
                    id: Date.now().toString(), 
                    date: new Date().toLocaleDateString(), 
                    timestamp: Date.now(), 
                    totalSets, 
                    exerciseCount: exercises.length, 
                    volumeSummary: exercises.reduce((acc, curr) => ({ ...acc, [curr.muscle]: (acc[curr.muscle] || 0) + curr.sets.length }), {}) 
                };
                setHistory([entry, ...history]);
                setExercises(exercises.map(ex => ({ ...ex, completed: false, sets: ex.sets.map(s => ({ ...s, actualReps: "" })) })));
                setActiveTab('dashboard');
            };

            const weeklyStats = (() => {
                const now = new Date();
                const startOfWeek = new Date(now);
                startOfWeek.setDate(now.getDate() - now.getDay());
                startOfWeek.setHours(0,0,0,0);
                const weekWorkouts = history.filter(h => h.timestamp >= startOfWeek.getTime());
                const muscleVol = {}; 
                let totalSets = 0;
                weekWorkouts.forEach(w => { 
                    totalSets += w.totalSets; 
                    Object.entries(w.volumeSummary || {}).forEach(([m, c]) => muscleVol[m] = (muscleVol[m] || 0) + c); 
                });
                return { 
                    workouts: weekWorkouts.length, 
                    sets: totalSets, 
                    muscles: muscleVol,
                    range: `${startOfWeek.toLocaleDateString('en-US', {month: 'short', day: 'numeric'})} - Today` 
                };
            })();

            const getTimerColor = () => {
                if (timerMode === 'WORK') return 'bg-cyan-500';
                if (timerMode === 'REST_SET') return 'bg-amber-500';
                if (timerMode === 'REST_EX') return 'bg-purple-500';
                return 'bg-emerald-500';
            };

            return (
                <div className="min-h-screen bg-black text-zinc-100 pb-32 safe-area-inset-bottom overflow-x-hidden">
                    {/* Bulk Modal */}
                    {showBulkModal && (
                        <div className="fixed inset-0 z-[100] flex items-center justify-center p-6 bg-black/80 backdrop-blur-md">
                            <div className="bg-zinc-900 w-full max-w-md border border-zinc-800 rounded-[2.5rem] p-8 shadow-2xl">
                                <h3 className="text-xl font-bold mb-6 flex items-center gap-2"><ClipboardList className="text-cyan-400" /> Import</h3>
                                <textarea autoFocus value={bulkInput} onChange={(e) => setBulkInput(e.target.value)} placeholder="Exercise names... One per line" className="w-full h-48 bg-black border border-zinc-800 rounded-2xl p-4 mb-4 outline-none text-sm text-white" />
                                <button onClick={handleBulkImport} className="w-full bg-cyan-500 text-black font-black py-4 rounded-2xl active:scale-95 shadow-lg shadow-cyan-500/20">FINALIZE</button>
                            </div>
                        </div>
                    )}

                    {/* Mini Timer Overlay */}
                    {isActive && activeTab !== 'timer' && (
                        <div onClick={() => setActiveTab('timer')} className="fixed top-12 left-1/2 -translate-x-1/2 w-[90%] max-w-md z-[60] bg-zinc-900/90 backdrop-blur-xl border border-zinc-800 rounded-2xl p-3 flex justify-between items-center shadow-2xl ring-1 ring-white/10">
                            <div className="flex items-center gap-3">
                                <div className={`h-8 w-8 rounded-full flex items-center justify-center ${getTimerColor()} text-black animate-pulse`}><Timer size={16} /></div>
                                <div className="flex flex-col">
                                    <span className="text-[10px] font-black uppercase opacity-60 tracking-widest">{timerMode}</span>
                                    <span className="text-sm font-bold truncate max-w-[120px]">{exercises[currentExIndex]?.name}</span>
                                </div>
                            </div>
                            <span className="text-2xl font-black font-mono tracking-tighter">{timeLeft}s</span>
                        </div>
                    )}

                    <div className="max-w-xl mx-auto px-5 pt-12">
                        <div className="flex justify-between items-center mb-8 px-2">
                            <h1 className="text-3xl font-bold italic tracking-tighter">IRON<span className="text-cyan-400">FOCUS</span></h1>
                            <button onClick={() => setIsAudioEnabled(!isAudioEnabled)} className={`p-2.5 rounded-2xl border transition-all ${isAudioEnabled ? 'bg-cyan-500/10 border-cyan-500/30 text-cyan-400' : 'bg-zinc-900 border-zinc-800 text-zinc-500'}`}>
                                {isAudioEnabled ? <Volume2 size={22} /> : <VolumeX size={22} />}
                            </button>
                        </div>

                        {activeTab === 'program' && (
                            <div className="space-y-6 animate-in">
                                <div className="flex justify-between items-center px-1">
                                    <h2 className="text-xl font-bold tracking-tight">Active Training</h2>
                                    <div className="flex gap-2">
                                        <button onClick={() => { setBulkTarget('active'); setShowBulkModal(true); }} className="p-2 bg-zinc-900 rounded-xl border border-zinc-800"><ClipboardList size={18} className="text-zinc-400" /></button>
                                        <button onClick={finishWorkout} className="bg-zinc-900 px-4 py-2 rounded-xl font-bold text-xs border border-zinc-800 active:scale-95"><Flag size={14} /></button>
                                        <button onClick={() => addExercise()} className="bg-cyan-500 text-black px-4 py-2 rounded-xl font-bold text-xs shadow-lg shadow-cyan-500/20"><Plus size={16} /></button>
                                    </div>
                                </div>
                                <div className="space-y-4">
                                    {exercises.map(ex => (
                                        <div key={ex.id} className={`bg-zinc-900 border border-zinc-800 p-5 rounded-[2.5rem] transition-all ${ex.completed ? 'opacity-30 scale-[0.98]' : 'shadow-xl'}`}>
                                            <div className="flex gap-4 mb-4">
                                                <button onClick={() => setExercises(exercises.map(e => e.id === ex.id ? {...e, completed: !e.completed} : e))}>
                                                    {ex.completed ? <CheckCircle2 className="text-cyan-400" size={26} /> : <Circle className="text-zinc-700" size={26} />}
                                                </button>
                                                <div className="flex-1">
                                                    <input value={ex.name} onChange={e => setExercises(exercises.map(x => x.id === ex.id ? {...x, name: e.target.value} : x))} className="bg-transparent border-none p-0 text-xl font-bold w-full focus:ring-0 text-white" />
                                                    <div className="text-[10px] font-black uppercase text-cyan-500/60 tracking-widest">{ex.muscle}</div>
                                                </div>
                                                <button onClick={() => setExercises(exercises.filter(x => x.id !== ex.id))} className="text-zinc-800 hover:text-red-500"><Trash2 size={16} /></button>
                                            </div>
                                            <div className="space-y-2">
                                                {ex.sets.map((s, i) => (
                                                    <div key={s.id} className="grid grid-cols-12 gap-2 items-center bg-black/40 p-2 rounded-2xl border border-zinc-800/40">
                                                        <div className="col-span-1 text-center text-[10px] font-bold text-zinc-500">{i+1}</div>
                                                        <input value={s.targetReps} onChange={e => setExercises(exercises.map(x => x.id === ex.id ? {...x, sets: x.sets.map(st => st.id === s.id ? {...st, targetReps: e.target.value} : st)} : x))} className="col-span-5 bg-zinc-800/50 rounded-xl text-center text-xs py-2 border-none focus:ring-1 focus:ring-cyan-500 text-white" />
                                                        <input value={s.actualReps} onChange={e => setExercises(exercises.map(x => x.id === ex.id ? {...x, sets: x.sets.map(st => st.id === s.id ? {...st, actualReps: e.target.value} : st)} : x))} className="col-span-5 bg-zinc-800/80 rounded-xl text-center text-xs py-2 text-cyan-400 font-black border-none focus:ring-1 focus:ring-cyan-500" placeholder="--" />
                                                        <div className="col-span-1 flex justify-center"><button onClick={() => setExercises(exercises.map(x => x.id === ex.id ? {...x, sets: x.sets.filter(st => st.id !== s.id)} : x))} className="text-zinc-800"><X size={14} /></button></div>
                                                    </div>
                                                ))}
                                                <button onClick={() => setExercises(exercises.map(x => x.id === ex.id ? {...x, sets: [...x.sets, createNewSet()]} : x))} className="w-full py-2 border border-dashed border-zinc-800 rounded-xl text-[9px] font-black uppercase text-zinc-600 hover:text-cyan-500 transition-all">+ Add Set</button>
                                            </div>
                                        </div>
                                    ))}
                                </div>
                            </div>
                        )}

                        {activeTab === 'timer' && (
                            <div className="animate-in flex flex-col items-center">
                                <div className="w-full bg-zinc-900 border border-zinc-800 rounded-[2.5rem] p-8 mb-8 text-center shadow-2xl relative overflow-hidden">
                                    <div className="absolute top-0 left-0 h-1.5 w-full bg-zinc-800">
                                        <div className={`h-full ${getTimerColor()} transition-all duration-700`} style={{ width: `${((currentExIndex + 1) / (exercises.length || 1)) * 100}%` }} />
                                    </div>
                                    <span className={`text-[10px] font-black uppercase tracking-[0.2em] mb-2 block ${getTimerColor().replace('bg-', 'text-')}`}>{timerMode}</span>
                                    <h3 className="text-3xl font-black mb-4 truncate px-4">{exercises[currentExIndex]?.name || 'Workout Complete'}</h3>
                                    
                                    {(timerMode !== 'WORK' && timerMode !== 'COMPLETED') && (
                                        <div className="mt-4 p-4 bg-black/40 rounded-2xl border border-zinc-800/50 animate-pulse">
                                            <p className="text-[10px] font-bold text-zinc-500 uppercase tracking-widest mb-1">Up Next</p>
                                            <p className="text-lg font-black">{timerMode === 'REST_SET' ? `Set ${currentCycle + 1}` : (exercises[currentExIndex + (timerMode === 'PREP' ? 0 : 1)]?.name || "End")}</p>
                                        </div>
                                    )}
                                </div>

                                <div className="relative flex items-center justify-center mb-12">
                                    <svg className="w-80 h-80 transform -rotate-90">
                                        <circle cx="160" cy="160" r="145" stroke="currentColor" strokeWidth="12" fill="transparent" className="text-zinc-900" />
                                        <circle cx="160" cy="160" r="145" stroke="currentColor" strokeWidth="12" strokeLinecap="round" fill="transparent" strokeDasharray="911" strokeDashoffset={911 - (timeLeft / (timerSettings[timerMode === 'WORK' ? 'work' : timerMode === 'REST_SET' ? 'restSet' : timerMode === 'PREP' ? 'prepTime' : 'restExercise'] || 10)) * 911} className={`transition-all duration-1000 ease-linear ${getTimerColor().replace('bg-', 'text-')}`} />
                                    </svg>
                                    <div className="absolute flex flex-col items-center">
                                        <span className="text-9xl font-black font-mono tracking-tighter text-white">{timeLeft}</span>
                                        <span className="text-xs font-bold text-zinc-500 mt-2 tracking-widest uppercase">Set {currentCycle} of {exercises[currentExIndex]?.sets?.length || 1}</span>
                                    </div>
                                </div>

                                <div className="flex gap-4 w-full mb-10">
                                    <button onClick={() => handlePhaseTransition('PREV')} className="flex-1 bg-zinc-900 border border-zinc-800 p-6 rounded-3xl active:scale-90 flex items-center justify-center text-zinc-500"><SkipBack size={28} /></button>
                                    <button onClick={() => setIsActive(!isActive)} className={`flex-[2] py-6 rounded-[2rem] font-black text-2xl active:scale-95 flex items-center justify-center gap-4 ${isActive ? 'bg-zinc-800 text-white border border-zinc-700' : 'bg-white text-black'}`}>
                                        {isActive ? <Pause fill="currentColor" size={28} /> : <Play fill="currentColor" size={28} />} {isActive ? "PAUSE" : "START"}
                                    </button>
                                    <button onClick={() => handlePhaseTransition('NEXT')} className="flex-1 bg-zinc-900 border border-zinc-800 p-6 rounded-3xl active:scale-90 flex items-center justify-center text-zinc-500"><SkipForward size={28} /></button>
                                </div>
                                
                                <button onClick={resetTimer} className="text-xs font-black uppercase tracking-widest text-zinc-600 hover:text-white mb-8 flex items-center gap-2"><RotateCcw size={14} /> Full Session Reset</button>
                            </div>
                        )}

                        {activeTab === 'planner' && (
                            <div className="space-y-4 animate-in">
                                <h2 className="text-xl font-bold tracking-tight mb-4 px-1">Weekly Planner</h2>
                                {DAYS_OF_WEEK.map(d => (
                                    <div key={d} className="bg-zinc-900 border border-zinc-800 p-6 rounded-[2rem] flex justify-between items-center group">
                                        <div>
                                            <h3 className="text-lg font-bold">{d}</h3>
                                            <p className="text-[10px] text-zinc-500 uppercase font-black tracking-widest">{(planner[d] || []).length} Exercises Planned</p>
                                        </div>
                                        <div className="flex gap-2">
                                            <button onClick={() => { setBulkTarget(d); setShowBulkModal(true); }} className="p-2.5 bg-zinc-800 border border-zinc-700 rounded-xl text-zinc-400 hover:text-cyan-400 transition-colors"><ClipboardList size={20} /></button>
                                            <button onClick={() => { setExercises(planner[d]); setActiveTab('program'); }} className="px-5 py-2.5 bg-cyan-500 text-black rounded-xl text-xs font-black uppercase active:scale-95 shadow-lg shadow-cyan-500/10">GO</button>
                                        </div>
                                    </div>
                                ))}
                            </div>
                        )}

                        {activeTab === 'dashboard' && (
                            <div className="animate-in space-y-8">
                                <div className="bg-zinc-900 border border-zinc-800 rounded-[3rem] p-8 shadow-2xl relative overflow-hidden group">
                                    <Award className="absolute -right-4 -bottom-4 w-32 h-32 text-cyan-500/10 group-hover:scale-110 transition-transform" />
                                    <h2 className="text-[10px] font-black text-cyan-400 uppercase tracking-widest mb-2">Weekly Intelligence</h2>
                                    <h3 className="text-3xl font-black mb-1">Performance Engine</h3>
                                    <p className="text-zinc-500 text-[10px] font-black uppercase tracking-[0.3em] mb-8">{weeklyStats.range}</p>
                                    
                                    <div className="grid grid-cols-2 gap-4 mb-8">
                                        <div className="bg-black/50 p-6 rounded-3xl border border-zinc-800/50">
                                            <div className="text-3xl font-black">{weeklyStats.workouts}</div>
                                            <div className="text-[10px] font-bold text-zinc-500 uppercase tracking-widest">Sessions</div>
                                        </div>
                                        <div className="bg-black/50 p-6 rounded-3xl border border-zinc-800/50">
                                            <div className="text-3xl font-black tracking-tighter">{weeklyStats.sets}</div>
                                            <div className="text-[10px] font-bold text-zinc-500 uppercase tracking-widest">Sets Performed</div>
                                        </div>
                                    </div>

                                    <div className="space-y-4">
                                        <h4 className="text-[10px] font-black text-zinc-400 uppercase tracking-widest">Muscle Volume Focus</h4>
                                        {Object.entries(weeklyStats.muscles).length > 0 ? Object.entries(weeklyStats.muscles).sort((a,b)=>b[1]-a[1]).map(([m, c]) => (
                                            <div key={m} className="space-y-1">
                                                <div className="flex justify-between text-[10px] font-black uppercase"><span>{m}</span><span className="text-cyan-400">{c} Sets</span></div>
                                                <div className="h-1.5 w-full bg-black rounded-full overflow-hidden">
                                                    <div className="h-full bg-cyan-500" style={{ width: `${(c / weeklyStats.sets) * 100}%` }} />
                                                </div>
                                            </div>
                                        )) : <p className="text-center py-6 text-zinc-600 text-[10px] font-black uppercase">No training data this week</p>}
                                    </div>
                                </div>
                                
                                <div className="space-y-4">
                                    <h3 className="text-lg font-bold px-2 flex items-center gap-2"><History size={18} className="text-cyan-400" /> Session Log</h3>
                                    {history.slice(0, 5).map(entry => (
                                        <div key={entry.id} className="bg-zinc-900 border border-zinc-800 p-6 rounded-[2rem] flex justify-between items-center group hover:border-zinc-700 transition-all">
                                            <div>
                                                <div className="text-[10px] font-black text-cyan-500 uppercase tracking-widest mb-1">{entry.date}</div>
                                                <div className="text-xl font-black">{entry.exerciseCount} Exercises</div>
                                            </div>
                                            <div className="text-right">
                                                <div className="text-2xl font-black group-hover:text-cyan-400">{entry.totalSets}</div>
                                                <div className="text-[10px] font-bold text-zinc-600 uppercase">Sets</div>
                                            </div>
                                        </div>
                                    ))}
                                </div>
                            </div>
                        )}
                    </div>

                    <nav className="fixed bottom-6 left-1/2 -translate-x-1/2 w-[94%] max-w-md bg-zinc-900/90 backdrop-blur-3xl border border-zinc-800 rounded-[2.5rem] p-2 flex justify-between z-50 shadow-[0_-10px_40px_rgba(0,0,0,0.5)]">
                        {[
                            { id: 'program', icon: <Dumbbell size={20} />, label: 'Train' },
                            { id: 'timer', icon: <Timer size={20} />, label: 'Timer' },
                            { id: 'planner', icon: <LayoutGrid size={20} />, label: 'Plan' },
                            { id: 'dashboard', icon: <History size={20} />, label: 'Report' },
                        ].map((tab) => (
                            <button key={tab.id} onClick={() => setActiveTab(tab.id)} className={`flex-1 py-4 flex flex-col items-center rounded-[2rem] transition-all duration-300 ${activeTab === tab.id ? 'text-cyan-400 bg-black border border-zinc-800 shadow-inner' : 'text-zinc-600'}`}>
                                {tab.icon}<span className="text-[9px] mt-1 uppercase font-black tracking-widest">{tab.label}</span>
                            </button>
                        ))}
                    </nav>
                </div>
            );
        }

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>